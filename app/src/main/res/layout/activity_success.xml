<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.SuccessActivity">

    <!--Background Aplikasi-->
    <View
        android:id="@+id/viewAtas"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Logo-->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="156dp"
        android:layout_height="43dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--Akhir Logo-->

    <View
        android:id="@+id/viewBawah"
        android:layout_width="370dp"
        android:layout_height="600dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bgapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <!--Akhir Background-->



<!--    Menu Utama-->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imgSuccess"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/payment_success"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Lineral wraper-->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgSuccess">

        <!-- Judul -->
        <TextView
            android:layout_gravity="center"
            android:id="@+id/titleSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembayaran Berhasil"
            android:textSize="30sp"/>

        <!-- Linear nama Kreditor-->
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kreditor : "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/namaSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muhammad Alfian Hidayah"
                android:textSize="18sp"/>

        </LinearLayout>

        <!-- Linear ID Kreditor-->
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleIdKreditor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Kreditor: "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/idKreditorSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#130413"
                android:textSize="18sp"/>

        </LinearLayout>

        <!-- Linear ID Barang Kreditor-->
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleIdBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Barang : "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/idBarangSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1310302"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleIdTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID Transaksi : "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/idTransaksiSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1310302"
                android:textSize="18sp"/>

        </LinearLayout>

        <!-- Linear Tanggal-->
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Transaksi : "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tanggalSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 April 2020"
                android:textSize="18sp"/>

        </LinearLayout>

        <!-- Linear Nominal-->
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleNominal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominal : Rp "
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/nominalSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100000"
                android:textSize="18sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnToHome"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center"
            android:text="Kembali"
            android:textSize="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>

<!--        <Button-->
<!--            android:id="@+id/btnEdit"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginBottom="20dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:text="Edit Transaksi"-->
<!--            android:textSize="20sp"-->
<!--            android:paddingTop="10dp"-->
<!--            android:paddingBottom="10dp"-->
<!--            android:backgroundTint="@color/colorPrimaryDark"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="wrap_content"/>-->


    </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
<!--    Akhir Menu Utama-->

</androidx.constraintlayout.widget.ConstraintLayout>